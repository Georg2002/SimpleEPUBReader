<UserControl x:Class="EPUBReader.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EPUBReader"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="50">
    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="{x:Type ButtonBase}">
            <Setter Property="Width" Value="100"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <Button Content="Öffnen" Style="{StaticResource ButtonStyle}" Click="Open_Click"/>
        <Button Content="Bibliothek" Style="{StaticResource ButtonStyle}"/>
        <ToggleButton x:Name="RTLButton" Content="Rechts nach Links" Style="{StaticResource ButtonStyle}"/>
        <ToggleButton x:Name="VerticalButton" Content="Vertical" Style="{StaticResource ButtonStyle}"/>
        <ToggleButton Content="Nachtmodus" Style="{StaticResource ButtonStyle}"/>
        <Button Content="Schließen" Style="{StaticResource ButtonStyle}" Click="CloseProgram"/>
    </StackPanel>
</UserControl>
