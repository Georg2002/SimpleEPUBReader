<Window x:Class="EPUBReader2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EPUBReader2"
        xmlns:Render="clr-namespace:EPUBRenderer3;assembly=EPUBRenderer3"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        MouseMove="Window_MouseMove"
        MouseDown="Window_MouseMove"
        MouseUp="Window_MouseMove"
        MouseRightButtonDown="Window_MouseMove"
        Title="EPUBReader 3" Height="450" Width="800" MinHeight="400" MinWidth="400">
    <Grid>        
        <Grid x:Name="ContentGrid" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Click="Left_Click" Style="{StaticResource SwitchButtonStyle}"/>
            <Button Grid.Column="2" Click="Right_Click" Style="{StaticResource SwitchButtonStyle}"/>
            <Render:Renderer x:Name="Renderer" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </Grid>
        <Border x:Name="Bar" VerticalAlignment="Top" Height="40" Margin="0,-40,0,0" Background="{Binding ElementName=OpenButton, Path=Background, Mode=OneTime}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button Content="Öffnen" Click="OpenButton_Click" Style="{StaticResource MenuButtonStyle}" x:Name="OpenButton"/>
                <Button Content="Bibliothek" Click="Library_Click" Grid.Column="1" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Kapitel" Click="Chapter_Click" Grid.Column="2" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Seiten" Click="Pages_Click" Grid.Column="3" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Farbe wechseln" Click="Color_Click" Grid.Column="4" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Vollbild" Click="Fullscreen_Click" Grid.Column="5" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Schließen" Click="Close_Click" Grid.Column="6" Style="{StaticResource MenuButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
